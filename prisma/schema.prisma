datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserDetails {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  password    String
  name        String
  email       String   @unique
  phoneNumber String   @unique
  cart        Cart[]
}

model Product {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  title       String
  description String
  price       Float
  category    String
  rating      Float
  cartItems   Cart[]
}

model Cart {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int      @default(1)

  // Relations
  user    UserDetails @relation(fields: [userId], references: [id])
  product Product     @relation(fields: [productId], references: [id])
}
